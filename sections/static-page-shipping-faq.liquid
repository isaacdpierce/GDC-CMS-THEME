<div class="section faq__wrapper">
  {% for block in section.blocks %}
    {% if block.type == 'heading' %}
      <h3 class="faq-heading">
        {{ block.settings.heading }}
      </h3>
    {% else %}
      <div class="faq">
        <div class="question__wrapper">
          <div class="question">
          	{{ block.settings.question }}
          </div>
          <div class="question-toggle">
            {% include 'icon-plus' %}
            {% include 'icon-minus' %}
          </div>
        </div>
        <div class="answer">
          {{ block.settings.answer }}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
  {
    "name": "FAQ",
    "settings": [],
	"blocks": [
	  {
		"type": "heading",
		"name": "Heading",
		"settings": [
		  {
			"type": "text",
			"id": "heading",
			"label": "Heading"
		  }
		]
	  },
	  {
		"type": "question",
		"name": "Question",
		"settings": [
		  {
			"type": "text",
			"id": "question",
			"label": "Question"
		  },
		  {
			"type": "richtext",
			"id": "answer",
			"label": "Answer"
		  }
		]
	  }
	]
  }
{% endschema %}
