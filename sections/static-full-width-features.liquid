{% for block in section.blocks %}
  <section>
    <div
      class="full-width-feature lazyload"
      data-bgset="{% include 'responsive-bg-image', image: block.settings.image %}"
      role="img"
      aria-label="{{ block.settings.image.alt }}"
    >

      {% if block.settings.image == blank and block.settings.video_url == blank %}
        <div class="absolute absolute--fill">{{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}</div>
      {% endif %}

      {% include 'content-overlay' with s: block.settings, heading: block.settings.title, contain: true %}

      {% if block.settings.video_url != blank %}
        <video class="full-width-feature__video" autoplay playsinline loop muted src="{{ block.settings.video_url }}" />
      {% endif %}

    </div>
  </section>
{% endfor %}


{% schema %}
  {
    "name": "Full width features",
    "blocks": [
      {
        "type": "feature",
        "name": "Feature",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "video_url",
            "label": "Video link",
            "info": "Direct link to .mp4 video file. Upload an MP4 under 20 MB [here](/admin/settings/files) and copy the URL. For detailed instructions, see our [documentation](https://help.fluorescent.co/context/full-width-image.html#upload-a-video)."
          },
          {
            "type": "range",
            "id": "overlay_opacity",
            "min": 0,
            "max": 100,
            "step": 10,
            "default": 30,
            "label": "Overlay opacity"
          },
          {
            "type": "color",
            "id": "overlay_color",
            "label": "Overlay color"
          },
          {
            "type": "color",
            "id": "text_color",
            "label": "Text color"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          },
          {
            "type": "textarea",
            "id": "subheading",
            "label": "Subheading"
          },
          {
            "type": "range",
            "id": "text_max_width",
            "label": "Max width of text",
            "min": 16,
            "max": 38,
            "step": 1,
            "default": 32
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Link text"
          },
          {
            "type": "select",
            "id": "link_style",
            "label": "Link style",
            "options": [
              {
                "value": "button",
                "label": "Button"
              },
              {
                "value": "arrow_link",
                "label": "Link with arrow"
              }
            ]
          },
          {
            "type": "select",
            "id": "horizontal_text_position",
            "label": "Horizontal text position",
            "options": [
              { "value": "left", "label": "Left" },
              { "value": "center", "label": "Center" },
              { "value": "right", "label": "Right" }
            ]
          },
          {
            "type": "select",
            "id": "vertical_text_position",
            "label": "Vertical text position",
            "options": [
              { "value": "top", "label": "Top" },
              { "value": "middle", "label": "Middle" },
              { "value": "bottom", "label": "Bottom" }
            ],
            "default": "middle"
          }
        ]
      }
    ]
  }
{% endschema %}
